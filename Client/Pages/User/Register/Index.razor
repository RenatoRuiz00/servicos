@page "/user/register/index"
@inject NavigationManager navigation

<h3>Bem-vindo!</h3>
<hr />
<br />

<div class="card" style="width:400px;">
    <div class="card-header">
        <h4>Tipo Cadastro</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="tipo" checked @onchange='(()=>MudarCampo("Contratante"))' />
                    <label class="form-check-label">Eu sou <strong>Contratante</strong></label>
                </div>
            </div>
        </div>

        <div class="row" style="margin-top:10px;margin-bottom:20px;">
            <div class="col">
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="tipo" @onchange='(()=>MudarCampo("Contratante"))' />
                    <label class="form-check-label" for="formCheck-1">Eu sou <strong>Trabalhador</strong></label>
                </div>
            </div>
        </div>

        <div class="row"> 
            <button class="btn btn-success float-right" @onclick="Submit">Próximo</button>
        </div>

    </div>
</div>

<div>
    @contratante
    @trabalhador
</div>


@code {
    bool contratante = true;
    bool trabalhador = false;

    void MudarCampo(string tipo)
    {
        contratante = !contratante;
        trabalhador = !trabalhador;
    }

    void Submit()
    {
        if (contratante)
        {
            navigation.NavigateTo("user/register/contractor");
        }

    }
}
